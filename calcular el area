using System;

namespace libroJava
{
    class Program
    {
        static void Main(string[] args)
        {

            Console.WriteLine("calcula el area?");
            Console.WriteLine("_____________________");
            Console.WriteLine("1: cuadrado");
            Console.WriteLine("2: rectangulo");
            Console.WriteLine("3: triangulo");
            Console.WriteLine("elija una opcion entre el 1-3");

            int opcion = int.Parse(Console.ReadLine());
            int lado;
            int basse;
            int altura;

            



            
            

            switch (opcion)
            {

                case 1:
                    Console.WriteLine("introduce el lado del cuadrado en cm");
                    lado = int.Parse(Console.ReadLine());
                    Console.WriteLine( "el lado del cuadrado es...{0}, en cm",(lado * lado));
                    break;


                case 2:
                    Console.WriteLine("introduce la base del rectangulo en cm");
                    basse = int.Parse(Console.ReadLine());
                    Console.WriteLine("introduce la altura del rectangulo en cm");
                    altura = int.Parse(Console.ReadLine());
                    Console.WriteLine("la base  del rectangulo es...{0}, en cm", (basse * altura));
                    break;


                case 3:
                    Console.WriteLine("introduce la base del triangulo en cm");
                    basse = int.Parse(Console.ReadLine());
                    Console.WriteLine("introduce la altura del triangulo en cm");
                    altura = int.Parse(Console.ReadLine());
                    Console.WriteLine("la base  del triangulo es...{0}, en cm", (basse * altura)/2);
                    break;



                default:
                    Console.WriteLine("la opci√≥n elegida no es correcta");
                    break;
            }
           
        }
    }

}
