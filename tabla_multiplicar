using System;

namespace libroJava
{
    class Program
    {
        /*Realiza un programa que nos diga si hay probabilidad de que nuestra pareja nos está siendo infiel. 
      * El programa irá haciendo preguntas que el usuario contestará con verdadero o falso. 
      * Cada pregunta contestada como verdadero sumará 3 puntos. Las preguntas contestadas con falso no suman puntos. A continuación se listan las preguntas del test.*/




        static void Main(string[] args)
        { int num;

            Console.WriteLine("esto es una tabla de multiplicar");
            num = int.Parse(Console.ReadLine());
            for (int i = 0; i <= 10; i++)
            {
                Console.Write("la tabla de multiplicar de "+num+" es...."+num+"x"+i+"=");
                Console.WriteLine(num*i  );
            }
    
        }

    }
}
